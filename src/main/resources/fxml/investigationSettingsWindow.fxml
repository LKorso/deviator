            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sdr.controllers.InvestigationSettingsController">
    <children>
        <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-pref-width: 750; -fx-pref-height: 400;">
            <children>
                <JFXCheckBox fx:id="subOservationsCheck" checkedColor="#8bc34a" layoutX="14.0" layoutY="116.0"
                             mnemonicParsing="false" text="Sub-observations" textFill="#212121"
                             unCheckedColor="#757575">
                    <font>
                        <Font name="Roboto" size="17.0"/>
                    </font>
                </JFXCheckBox>
                <JFXTextField fx:id="startValueField" focusColor="#8bc34a" labelFloat="true" layoutX="14.0"
                              layoutY="57.0" maxWidth="363.0" minWidth="262.0" prefHeight="45.0" prefWidth="308.0"
                              promptText="Start value" unFocusColor="#757575">
                    <font>
                        <Font name="Roboto" size="21.0"/>
                    </font>
                </JFXTextField>
                <JFXTextField fx:id="endValueField" focusColor="#8bc34a" labelFloat="true" layoutX="398.0"
                              layoutY="57.0" maxWidth="363.0" minWidth="262.0" prefHeight="45.0" prefWidth="308.0"
                              promptText="End value" unFocusColor="#757575">
                    <font>
                        <Font name="Roboto" size="21.0"/>
                    </font>
                </JFXTextField>
                <JFXTextField fx:id="subNumberField" focusColor="#8bc34a" labelFloat="true" layoutX="14.0"
                              layoutY="155.0" maxWidth="363.0" minWidth="262.0" prefHeight="45.0" prefWidth="308.0"
                              promptText="Sub-observation number" unFocusColor="#757575">
                    <font>
                        <Font name="Roboto" size="21.0"/>
                    </font>
                </JFXTextField>
                <JFXTextField fx:id="subCoefficientField" focusColor="#8bc34a" labelFloat="true" layoutX="398.0"
                              layoutY="155.0" maxWidth="363.0" minWidth="262.0" prefHeight="45.0" prefWidth="308.0"
                              promptText="Values coefficient" unFocusColor="#757575">
                    <font>
                        <Font name="Roboto" size="21.0"/>
                    </font>
                </JFXTextField>
                <Separator layoutX="7.0" layoutY="104.0" prefHeight="4.0" prefWidth="736.0"/>
                <Separator layoutX="7.0" layoutY="220.0" prefHeight="4.0" prefWidth="736.0"/>
