                             mnemonicParsing="false" text="Split" textFill="#212121" unCheckedColor="#757575">
                    <font>
                        <Font name="Roboto" size="17.0"/>
                    </font>
                </JFXCheckBox>
                <Label layoutX="31.0" layoutY="232.0" text="Choose the criteria to detect outliers" textFill="#757575">
                    <font>
                        <Font name="Roboto" size="17.0"/>
                    </font>
                </Label>
                <JFXButton fx:id="investigeteButton" onAction="#processInvestigation" buttonType="RAISED" layoutX="532.0" layoutY="322.0" prefWidth="145.0"
                           style="-fx-background-color: #FFC107; -fx-pref-height: 36; -fx-min-width: 88;"
                           text="INVESTIGATE" textFill="WHITE">
                    <font>
                        <Font name="Roboto Bold" size="18.0"/>
                    </font>
                </JFXButton>
                <ChoiceBox fx:id="criteriaChoiceBox" layoutX="31.0" layoutY="275.0" prefHeight="25.0"
                           prefWidth="274.0"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
